{
  "functions": {
    "app/api/articles/route.ts": {
      "maxDuration": 10
    },
    "app/api/articles/[id]/route.ts": {
      "maxDuration": 10
    },
    "app/api/cesta/daily-reset/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-reset",
      "schedule": "0 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
